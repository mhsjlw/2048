#!/bin/bash

TOTAL=5
SUCCEEDED=0

test() {
  RESULT=$(echo "${2}" | ./2048 2>&1)
  [[ $RESULT = $3 ]] && SUCCEEDED=$((SUCCEEDED + 1))
}

# TEST_CASE_1
read -d '' TEST_CASE_1 <<"EOF"
2 64 4 32
8 16 8 4
4 32 4 0
2 2 0 0
EOF

TEST_CASE_1_SOLUTION="128"

test "1" "${TEST_CASE_1}" $TEST_CASE_1_SOLUTION
# TEST_CASE_1

# TEST_CASE_2
read -d '' TEST_CASE_2 <<"EOF"
0 0 0 2
0 0 0 2
0 0 0 0
0 0 0 2
EOF

TEST_CASE_2_SOLUTION="4"

test "2" "${TEST_CASE_2}" $TEST_CASE_2_SOLUTION
# TEST_CASE_2

# TEST_CASE_3
read -d '' TEST_CASE_3 <<"EOF"
2 4 8 2
0 2 0 8
0 0 0 0
0 0 0 0
EOF

TEST_CASE_3_SOLUTION="16"

test "3" "${TEST_CASE_3}" $TEST_CASE_3_SOLUTION
# TEST_CASE_3

# TEST_CASE_4
read -d '' TEST_CASE_4 <<"EOF"
4 32 8 0
2 64 4 2
8 4 2 0
2 0 0 0
EOF

TEST_CASE_4_SOLUTION="128"

test "4" "${TEST_CASE_4}" $TEST_CASE_4_SOLUTION
# TEST_CASE_4

# TEST_CASE_5
read -d '' TEST_CASE_5 <<"EOF"
256 256 0 0
256 256 0 0
256 256 0 0
256 256 0 0
EOF

TEST_CASE_5_SOLUTION="2048"

test "5" "${TEST_CASE_5}" $TEST_CASE_5_SOLUTION
# TEST_CASE_5

echo -e "${SUCCEEDED}/${TOTAL}"
